<body>
    <%- include('../includes/navigation.ejs') %>
    <h1>Your Cart</h1>
    <main>
        <% if (products.length > 0){ %>
            <ul>
                <% products.forEach(product => { %>
                    <li>
                        <p><%= product.productData.title %> ( <%= product.quantity %> )</p>
                        <form action="/cart-delete-item/<%= product.productData.id %>" method="post">
                            <button class="btn" type="submit">Delete</button>
                        </form>
                    </li>
                <% }) %>
            </ul>


        <% } else { %> 
            <h1> Nothing in your cart </h1>
        <% } %>
    </main>

