<%- include('../includes/header.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <h1>Your Orders</h1>
    <main>
        <% if (orders.length > 0){ %>
            <ul class="cart__item-list">
                <% orders.forEach(order => { %>
                    <h1 class="centered"><%= order._id %></h1>
                    <% order.products.forEach(product =>{ %>
                        <li class="cart__item">
                            <div class="cart__image">
                                <img src="<%= product.productData.imagePath %>" alt="A Book">
                            </div>
                            <span class="cart__title">
                                <h1><%= product.productData.title %> - <a href="/orders/<%= order._id %>">Invoice</a></h1>
                                <form action="/cart-delete-one-item/<%= order._id %>" method="post">
                                    <button class="btn danger" type="submit"><i class="icon-minus"></i></button>
                                </form> 
                                ( <%= product.quantity %> )
                                <form action="/cart-add-one-item/<%= order._id %>" method="post">
                                    <button class="btn" type="submit"><i class="icon-plus"></i></button>
                                </form>
                            </span>
                            <div class="cart__total">
                                <p>Subtotal: $<%= product.orderTotal %></p>
                            </div>
                            <form action="/cart-delete-item/<%= order._id %>" method="post">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn danger" type="submit"><i class="icon-trash"></i> Remove</button>
                            </form>
                        </li>
                    <% })%>
                <% }) %>
            </ul>
            <div class="centered">
                <form action="/create-order" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn" type="submit"><i class="icon-shopping-cart"></i> Place your Order</button>
                </form>
            </div>
        <% } else { %> 
            <h1> No Orders Yet </h1>
        <% } %>
    </main>
<%- include('../includes/footer.ejs') %>